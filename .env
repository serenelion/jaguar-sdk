# Jaguar Monorepo - Environment Variables
# Copy this file to .env and fill in the values

# ===== AI Open Agents Configuration =====

# OpenRouter Credentials
OPEN_ROUTER_API_BASE=https://openrouter.ai/api/v1
OPEN_ROUTER_API_KEY=your-open-router-api-key-here

# Open Web UI to access the tool server
TOOL_SERVER_API_KEY=keepthissecret

# Supabase Configuration
SUPABASE_API_URL=http://host.docker.internal:54321
SUPABASE_API_KEY=your_supabase_api_key_here

# ===== GitHub Integration =====

# GitHub Personal Access Token (required for GitHub integration)
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# GitHub Webhook Secret (optional, for webhook validation)
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# ===== Jaguar SDK Configuration =====

# Database (Required for Jaguar SDK)
POSTGRES_URL=postgresql://postgres:password@db.your-ref.supabase.co:5432/postgres

# Jaguar AI Models - Local Development (connects to local OpenWebUI)
JAGUAR_BASE_URL=http://localhost:3002
JAGUAR_API_KEY=your-openwebui-api-key-here

# Jaguar AI Models - Production (uncomment for production)
# JAGUAR_BASE_URL=https://ai.thespatialnetwork.net
# JAGUAR_API_KEY=sk-your-jaguar-api-key-here

# Authentication for Jaguar SDK
AUTH_SECRET=jaguar-local-dev-secret-32-chars-minimum-length-required
NEXTAUTH_URL=http://localhost:3000

# Optional Enhancements
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your-token
REDIS_URL=redis://localhost:6379

# NextAuth Configuration
NEXTAUTH_SECRET=jaguar-local-dev-secret-32-chars-minimum-length-required
NEXTAUTH_URL=http://localhost:3000

# ===== Development Configuration =====

# Node Environment
NODE_ENV=development

# Port Configuration
AI_AGENTS_PORT=3000
JAGUAR_SDK_PORT=3001
TOOL_SERVER_PORT=8000
REDIS_PORT=6379

# ===== Self-Development Configuration =====

# Default repository for self-development tasks
DEFAULT_REPO_OWNER=your-github-username
DEFAULT_REPO_NAME=jaguar-monorepo

# AI Agent Configuration
ENABLE_SELF_DEVELOPMENT=true
SELF_DEV_INTERVAL_HOURS=24
MAX_CONCURRENT_TASKS=3

