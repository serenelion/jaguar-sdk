# Jaguar SDK - Environment Variables
# Copy this file to .env and fill in the values

# ===== Authentication =====
AUTH_SECRET=your-auth-secret-here-minimum-32-characters-long
NEXTAUTH_URL=http://localhost:3001

# ===== Database (Required) =====
POSTGRES_URL=postgresql://postgres:password@db.your-ref.supabase.co:5432/postgres

# ===== AI Models - Local Development =====
# For local development, connect to the local OpenWebUI instance
JAGUAR_BASE_URL=http://localhost:3000
JAGUAR_API_KEY=your-openwebui-api-key-here

# ===== AI Models - Production =====
# For production, use the hosted Jaguar API
# JAGUAR_BASE_URL=https://ai.thespatialnetwork.net
# JAGUAR_API_KEY=sk-your-jaguar-api-key-here

# Alternative: Use xAI directly (if not using OpenWebUI)
# XAI_API_KEY=xai-your-api-key-here

# ===== Optional Features =====

# Supabase (for additional features)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# File Storage (Vercel Blob)
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your-token

# Caching (Redis)
REDIS_URL=redis://localhost:6379

# ===== Development Configuration =====
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3001

# ===== GitHub Integration =====
# These are used by the AI agents for self-development
GITHUB_TOKEN=ghp_your_github_token_here
DEFAULT_REPO_OWNER=your-github-username
DEFAULT_REPO_NAME=jaguar-monorepo

# ===== OpenWebUI Integration =====
# Tool server connection for AI agents
TOOL_SERVER_URL=http://localhost:8000
TOOL_SERVER_API_KEY=keepthissecret
